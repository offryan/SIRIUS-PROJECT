<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Sirius.Teste1">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="25" Spacing="5">
                <Label Text="Par ou ímpar" 
                   FontSize="Title"
                   BackgroundColor="Aquamarine" 
                   Padding="5"
                   HorizontalOptions="Center"/>

                <Entry x:Name="txtNumero" 
                   Placeholder="Digite um número inteiro" 
                   FontSize="Small" 
                   Keyboard="Numeric"/>

                <Button x:Name="btnVerificar"
                    Text="Verificar"
                    Clicked="Verificar"/>

                <Label x:Name="lblResult"/>
                
                <Button x:Name="btnReiniciar"
                        Text="Reiniciar"
                        Clicked="Reiniciar"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>